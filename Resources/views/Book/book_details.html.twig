                                <ul class="breadcrumb mb-4">
                                    <li class="breadcrumb-item"><a href="{{ path('front_main_index') }}">{{ 'front.main_side_menu.home'|trans }}</a></li>
                                    <li class="breadcrumb-item"><a href="{{ path('front_main_all_books') }}">{{ 'front.main.books'|trans }}</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">{{ bookDetails.translate().title }}</li>
                                </ul>
                                <div class="book-page-head">
                                    <div class="row">
                                        <div class="col-lg-8">
                                            <div class="thumbnail-item side-thumbnail-item-big side-thumbnail-item main-page-book-thumb mb-4">
