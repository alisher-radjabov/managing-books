                                                        <a class="block" href="#"><i class="ti-user"></i>{{ authorName }}</a>
                                                        {% if bookDetails.collection %}
                                                            <div class="form-control-inline book-control-parts mt-3">
                                                                <select class="select-filter-nosearch form-control input-md">
                                                                    {% for similarBook in otherBookParts %}
                                                                        <option value="1">{{ similarBook.translate().title }}</option>
                                                                    {% endfor %}
