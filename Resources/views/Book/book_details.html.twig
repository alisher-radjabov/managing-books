                                                                </div>
                                                            </div>
                                                            <!-- Thumb Over -->
                                                            <div class="book-cover">
                                                                <img property="og:image" src="{{ asset(bookDetails.photo) }}" alt="book-descriptions">
                                                                <span class="book-cover-mark"></span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
